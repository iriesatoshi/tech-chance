#account-page.account-page
  .account-page__inner.clearfix
    .account-page__inner--left.account-page__header
      %h2 Edit SchoolAccount
      %h5 アカウントの編集
      = link_to "ログアウト", destroy_user_session_path, method: :delete, class: 'btn'
      = link_to "トップページに戻る", :back, class: 'btn'
    .account-page__inner--right.user-form
      = form_for(current_user) do |f|
        .field
          .field-label
            = f.label :スクール名
          .field-input
            = f.text_field :name, autofocus: true
        .field
          .field-label
            = f.label :スクール住所
            %i (郵便番号7桁(-ハイフン不要))
          .field-input
            = f.text_field :school_address, autofocus: true
        .field
          .field-label
            = f.label :email
          .field-input
            = f.email_field :email
        .field
          .field-label
            = f.label :スクール説明
          .field-input
            = f.text_field :body, autofocus: true
        .field
          .field-label
            = f.label :スクールホームページ
          .field-input
            = f.text_field :url, autofocus: true
        .field
          .field-label
            = f.label :スクール画像
          .field-input
            = f.file_field :image, class: 'fileInput', autofocus: true
        .actions
          = f.submit "Update", class: 'btn'
