#account-page.account-page
  .account-page__inner.clearfix
    .account-page__inner--left.account-page__header
      %h2 Create Product
      %h5 新規教材の作成
    .account-page__inner--right.user-form
      = form_for [@lesson, @product] do |f|
        .field
          .field-label
            = f.label :教材名
          .field-input
            = f.text_field :title, autofocus: true
        .field
          .field-label
            = f.label :教材内容
          .field-input
            = f.text_field :body, autofocus: true
        .field
          .field-label
            = f.label :教材動画URL
            %i (Yuotube動画の投稿推奨)
          .field-input
            = f.text_field :url, autofocus: true
        .field
          .field-label
            = f.label :有料会員のみの公開
            %i (有料会員限定教材にする場合は"limited"と入力)
          .field-input
            = f.text_field :free, autofocus: true
        .field
          .field-label
            = f.label :教材
            %i (PDF形式)
          .field-input
            = f.file_field :pdf, class: 'fileInput', autofocus: true
        .actions
          = f.submit "教材投稿", class: 'btn'
